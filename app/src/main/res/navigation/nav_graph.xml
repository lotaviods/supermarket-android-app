<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="br.com.lotaviods.listadecompras.ui.main.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_MainFragment_to_CategoryFragment"
            app:destination="@id/CategoryFragment">

            <argument
                android:name="category"
                app:argType="integer" />
        </action>

        <action
            android:id="@+id/action_MainFragment_to_FormFragment_with_item"
            app:destination="@id/FormFragment">
            <argument
                android:name="category"
                app:argType="integer" />

            <argument
                android:name="product"
                app:argType="br.com.lotaviods.listadecompras.model.item.Item"/>
        </action>

    </fragment>

    <fragment
        android:id="@+id/CategoryFragment"
        android:name="br.com.lotaviods.listadecompras.ui.categories.CategoriesFragment"
        tools:layout="@layout/fragment_categories">

        <argument
            android:name="category"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_CategoryFragment_to_FormFragment"
            app:destination="@id/FormFragment">
            <argument
                android:name="category"
                app:argType="integer" />
        </action>

        <action
            android:id="@+id/action_CategoriesFragment_to_FormFragment_with_item"
            app:destination="@id/FormFragment">
            <argument
                android:name="category"
                app:argType="integer" />

            <argument
                android:name="product"
                app:argType="br.com.lotaviods.listadecompras.model.item.Item"/>
        </action>
    </fragment>

    <fragment
        android:id="@+id/FormFragment"
        android:name="br.com.lotaviods.listadecompras.ui.form.FormFragment"
        tools:layout="@layout/fragment_form">

        <argument
            android:name="category"
            android:defaultValue="0"
            app:argType="integer" />

        <argument
            android:name="product"
            app:argType="br.com.lotaviods.listadecompras.model.item.Item"
            app:nullable="true"/>
    </fragment>
</navigation>